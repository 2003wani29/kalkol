  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kalkulator Kalori</title>
  <link rel="stylesheet" href="styles.css">
  <style>
    /* Tambahkan beberapa gaya sederhana */
    .container {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }
    .form-group {
      margin-bottom: 15px;
    }
    label {
      display: block;
      margin-bottom: 5px;
    }
    input, select, button {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }
    button {
      background: #007bff;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background: #0056b3;
    }
    .result p {
      font-size: 1.1em;
      margin: 5px 0;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>Kalkulator <span>Kalori</span></h1>
      <nav>
        <a href="#">Data</a>
        <a href="#">Giziku</a>
        <a href="#">Artikel</a>
        <a href="#">Evaluasi</a>
        <a href="#">Logout</a>
      </nav>
    </header>
    <main>
      <h2>CATATAN KALORI HARIAN</h2>
      <form id="kaloriForm">
        <div class="form-group">
          <label for="nama-makanan">Nama Makanan:</label>
          <input type="text" id="nama-makanan" placeholder="Masukan nama makanan" required>
        </div>
        <div class="form-group">
          <label for="kalori">Kalori (kcl):</label>
          <input type="number" id="kalori" placeholder="Masukan jumlah kalori" required>
        </div>
        <div class="form-group">
          <label for="jenis-aktivitas">Jenis Aktivitas:</label>
          <select id="jenis-aktivitas" required>
            <option value="">Pilih aktivitas</option>
            <option value="lari">Lari (500 kcal/jam)</option>
            <option value="bersepeda">Bersepeda (400 kcal/jam)</option>
            <option value="jalan">Jalan Kaki (300 kcal/jam)</option>
          </select>
        </div>
        <div class="form-group">
          <label for="durasi">Durasi (jam):</label>
          <input type="number" id="durasi" placeholder="Masukan durasi aktivitas" required>
        </div>
        <button type="submit">Tambah Data</button>
      </form>
      <div class="result">
        <p>Total kalori makanan: <span id="total-makanan">0</span> kcl</p>
        <p>Total kalori terbakar: <span id="total-terbakar">0</span> kcl</p>
        <p>Kalori bersih: <span id="kalori-bersih">0</span> kcl</p>
      </div>
    </main>
  </div>

  <script>
    const form = document.getElementById('kaloriForm');
    const totalMakananEl = document.getElementById('total-makanan');
    const totalTerbakarEl = document.getElementById('total-terbakar');
    const kaloriBersihEl = document.getElementById('kalori-bersih');

    let totalMakanan = 0;
    let totalTerbakar = 0;

    // Fungsi untuk menghitung kalori terbakar
    function hitungKaloriTerbakar(aktivitas, durasi) {
      const kaloriPerJam = {
        lari: 500,
        bersepeda: 400,
        jalan: 300,
      };
      return kaloriPerJam[aktivitas] * durasi;
    }

    // Event listener untuk form submit
    form.addEventListener('submit', function (event) {
      event.preventDefault();

      const namaMakanan = document.getElementById('nama-makanan').value.trim();
      const kalori = parseInt(document.getElementById('kalori').value);
      const jenisAktivitas = document.getElementById('jenis-aktivitas').value;
      const durasi = parseInt(document.getElementById('durasi').value);

      if (!namaMakanan || isNaN(kalori) || !jenisAktivitas || isNaN(durasi)) {
        alert('Silakan isi semua field dengan benar!');
        return;
      }

      // Tambahkan total kalori makanan
      totalMakanan += kalori;

      // Hitung total kalori terbakar
      const kaloriTerbakar = hitungKaloriTerbakar(jenisAktivitas, durasi);
      totalTerbakar += kaloriTerbakar;

      // Hitung kalori bersih
      const kaloriBersih = totalMakanan - totalTerbakar;

      // Update nilai di DOM
      totalMakananEl.textContent = totalMakanan;
      totalTerbakarEl.textContent = totalTerbakar;
      kaloriBersihEl.textContent = kaloriBersih;

      // Reset form setelah submit
      form.reset();
    });
  </script>
</body>
</html>
